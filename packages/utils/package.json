{
  "name": "@dritelabs/project-starter-utils",
  "version": "0.0.0",
  "description": "Project utilities",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --target node16 --format esm,cjs",
    "build:dev": "pnpm build --dts-resolve",
    "fix": "gts fix",
    "lint": "gts lint",
    "test": "vitest run",
    "prepublishOnly": "pnpm run build",
    "prepare": "pnpm build",
    "pretest": "pnpm build",
    "posttest": "pnpm lint"
  },
  "license": "MIT",
  "dependencies": {
    "@pager/jackrabbit": "^5.4.3",
    "pino": "^8.6.1"
  },
  "devDependencies": {
    "@types/node": "18.7.23",
    "@types/pager__jackrabbit": "^4.8.2",
    "eslint": "^8.24.0",
    "gts": "^3.1.1",
    "pino-pretty": "^9.1.1",
    "tsup": "6.2.3",
    "typescript": "4.8.4",
    "vitest": "0.23.4"
  }
}
